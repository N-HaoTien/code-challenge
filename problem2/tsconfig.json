{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Target environment */
    "target": "ES2020",                  
    "module": "commonjs",                
    "lib": ["ES2020"],
    "types": ["node"],

    /* Decorators (needed for TypeORM) */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* TypeScript strictness */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Debugging */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
